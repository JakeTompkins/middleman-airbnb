<% flat = data.flats[owner] %>

<div id="show">
  <div class="wrapper">
    <div class="banner" style="background-image: url(<%= "https://kitt.lewagon.com/placeholder/cities/#{flat.city_slug}" %>)">
    </div>
    <div class="container">
      <div id="user_profile">
        <img src="https://kitt.lewagon.com/placeholder/users/tgenaitay" alt="user avatar">
        <p><%= owner %></p>
        <h3><%= flat.description %></h3>
        <p><%= flat.city_name %>
        <p><%= flat.rating %></p>
      </div>

      <div id="book_form">
        <h3>Book this flat</h3>
        <form action="#">
          <input type="text" placeholder="checkin">
          <input type="text" placeholder="checkout">
          <select name="occupants" id="occupant_elector">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </form>
      </div>

      <div id="bottom_wrapper">
        <h3>About this flat</h3>
        <p>Write content about the flat. Not provided in the yaml and I don't feel like writing a detailed, fake description each of the flats in there so here's what you get for now</p>
        <div class="space_flex">

        </div>
        <div class="amenities_flex">

        </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
